<div class="col-md-offset-3 col-md-6 well">
  <form class="form-horizontal" action="<%= action %>" method="post">
    <input type="hidden" name="_method" value="<%= method %>" />
    <%= auth_token %>
    <div class="form-group">
      <label for="inputEmail3" class="col-sm-2 control-label">Name</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" name="album[name]" id="inputEmail3" required placeholder="Name"  value="<%= album.name %>">
      </div>
    </div>
    <div class="form-group">
      <label for="inputEmail3" class="col-sm-2 control-label">Image url (optional)</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="inputEmail3" name="album[featured_image]" placeholder="Image url"  value="<%= album.featured_image %>">
      </div>
    </div>
    <div class="form-group">
      <label>Recorded</label>
      <div class="radio">
        <label>
          <input type="radio" name="album[album_type]" id="optionsRadios1" value="studio" <%= "checked" unless album.album_type == 'live' %>>
          in studio
        </label>
      </div>
      <div class="radio">
        <label>
          <input type="radio" name="album[album_type]" id="optionsRadios1" value="live" <%= "checked" if album.album_type == 'live' %>>
          live
        </label>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" class="btn btn-success">Create</button>
      </div>
    </div>
  </form>
</div>
